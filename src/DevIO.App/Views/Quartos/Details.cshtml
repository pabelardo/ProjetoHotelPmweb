@model DevIO.App.ViewModels.QuartoViewModel

@{
    ViewData["Title"] = "Detalhes do Quarto";
}

<h3 style="padding-top: 50px">@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <img src="~/imagens/@Model.Fotos" alt="@Model.Fotos" style="width: 300px; height: 428px" />
    </div>
    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.HotelId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Hotel.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NumeroOcupantes)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumeroOcupantes)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NumeroDeAdultos)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumeroDeAdultos)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NumeroDeCriancas)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumeroDeCriancas)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Preco)
            </dd>
        </dl>
        <div>
            <a supress-by-claim-name="Produto" supress-by-claim-value="Editar" class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
        </div>
    </div>
</div>
